@model Eshopper.Models.EF.SanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}



<link href="~/Areas/AssetAdmin/css/indexadmin.css" rel="stylesheet" type="text/css">

<link href="~/Areas/AssetAdmin/css/crudadmin.css" rel="stylesheet" type="text/css">

<div id="titleadmin">XÓA SẢN PHẨM</div>
<div style="margin-left: 1%">Bạn có muốn xóa không?</div>
<div>

    <dl class="dl-horizontal" id="customers">

        <dd>
            Tên loại sản phẩm: @Html.DisplayFor(model => model.LoaiSP.TenLoai)
        </dd>

        <dd>
            Tên sản phẩm:       @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dd>
            Số lượng:            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dd>
            Đơn giá:             @Html.DisplayFor(model => model.DonGia)
        </dd>

        <dd>
            Mô tả:            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dd>
            Giá khuyến mại:            @Html.DisplayFor(model => model.GiaKM)
        </dd>

        Ảnh sản phẩm
        <div id="images-group">
            @if (Model.URLAnh != null)
            {
                <div class="multiple-images-wrapper col-md-2">
                    <img src="@Path.Combine(Model.URLAnh)" class="img-thumbnail" />
                </div>
            }
        </div>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin: 1%">
            <input type="submit" value="Xóa" class="btn btn-default" style="width:8%" />

        </div>
        <div style="margin: 1%">
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
