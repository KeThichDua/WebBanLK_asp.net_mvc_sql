@model Eshopper.Models.EF.NguoiDung

@{
    ViewBag.Title = "Register";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Quản trị E-shopper</title>

    <!-- Custom fonts for this template-->
    <link href="~/Areas/AssetAdmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Areas/AssetAdmin/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <div class="container-fluid">
        <h2 class="row justify-content-center"> Đăng ký người dùng </h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row justify-content-center">
                    <div class="col-5">
                        <h3>
                            Thông tin cá nhân
                        </h3>
                        <div class="form-group">
                            <label class="col-form-label">
                                Tên người dùng
                            </label>
                            <div>
                                <input name="TenND" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class=" col-form-label">
                                Số điện thoại
                            </label>
                            <div>
                                <input name="SDT" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class=" col-form-label">
                                Địa chỉ
                            </label>
                            <div>
                                <input name="DiaChi" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Đăng ký" class="btn btn-outline-primary" />
                            </div>
                        </div>
                    </div>
                    <div class="col-5">
                        <h3>
                            Thông tin đăng nhập
                        </h3>

                        <div class="form-group">
                            <label class=" col-form-label">
                                Email cá nhân
                            </label>
                            <div>
                                <input type="email" name="Email" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">
                                Tài khoản
                            </label>
                            <div>
                                <input name="UserName" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class=" col-form-label">
                                Mật khẩu
                            </label>
                            <div>
                                <input type="password" name="MatKhau" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class=" col-form-label">
                                Xác nhận mật khẩu
                            </label>
                            <div>
                                <input type="password" name="confimPass" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        }

        <div class="row justify-content-center">
            <p>
                <a>
                    Đã có tài khoản?
                </a>
                <a class="btn btn-primary" href="@Url.Action("Login")">
                    Đăng nhập
                </a>
            </p>
        </div>

    </div>

    <!-- End of Main Content -->
    <!-- Footer -->
    <footer class="sticky-footer bg-white">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <span>Copyright &copy; E-shopper 2021</span>
            </div>
        </div>
    </footer>
    <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>



    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/AssetAdmin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/AssetAdmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Areas/AssetAdmin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Areas/AssetAdmin/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Areas/AssetAdmin/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Areas/AssetAdmin/js/demo/chart-area-demo.js"></script>
    <script src="~/Areas/AssetAdmin/js/demo/chart-pie-demo.js"></script>


</body>

</html>