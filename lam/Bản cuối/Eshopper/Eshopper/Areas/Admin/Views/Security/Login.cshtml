@using Eshopper.Models.ViewModels;
@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Quản trị E-shopper</title>

    <!-- Custom fonts for this template-->
    <link href="~/Areas/AssetAdmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Areas/AssetAdmin/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div class="container-fluid">
                <img src="/Assets/images/home/a.png adada" class="img-thumbnail" alt="" />
            </div>

            <!-- Main Content -->
            <div class="container-fluid">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <h2 class="text-center"> Đăng Nhập </h2>
                    <div class="row justify-content-center">

                        <div class="col-5">
                            <div class="form-group">
                                <label>Tài khoản</label>
                                <input class="form-control" name="UserName">
                            </div>
                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input type="password" class="form-control" name="PassWord">
                            </div>
                            <button type="submit" class="btn btn-primary ">Xác nhận</button>
                        </div>

                    </div>

                }

                <div class="row justify-content-center">
                    <p>
                        <a>
                            Chưa có tài khoản?
                        </a>
                        <a class="btn btn-success" href="@Url.Action("Register")">
                            Tạo tài khoản mới
                        </a>
                    </p>

                </div>
            </div>




            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; E-shopper 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Areas/AssetAdmin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Areas/AssetAdmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Areas/AssetAdmin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Areas/AssetAdmin/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Areas/AssetAdmin/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Areas/AssetAdmin/js/demo/chart-area-demo.js"></script>
    <script src="~/Areas/AssetAdmin/js/demo/chart-pie-demo.js"></script>


</body>

</html>