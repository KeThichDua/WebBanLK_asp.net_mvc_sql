@model Eshopper.Models.EF.BangKhuyenMai

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h3>Bạn chắc muốn xóa khuyến mại này?</h3>
<div>
    <h4>Khuyến mại: @Model.MaKM</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tiền khuyến mại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TienKM)
        </dd>

        <dt>Tỉ lệ khuyến mại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TiLeKM)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xác nhận" class="btn btn-default" /> |
            @Html.ActionLink("Trở lại", "Index")
        </div>
    }
</div>
