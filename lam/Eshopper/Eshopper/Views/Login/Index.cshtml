@model Eshopper.Models.Dao.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
              
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="login-form">
                       <h2>Đăng nhập tài khoản của bạn</h2>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <fieldset>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @autofocus = "autofocus" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(model => model.Pass, new { @class = "form-control" })
                        </div>
                        <hr>
                        <div class="checkbox">
                            @Html.CheckBoxFor(model => model.RememberMe) Nhớ mật khẩu
                        </div>
                        <button type="submit" class="btn btn-lg btn-block">Login</button>
                    </fieldset>
                    </div>
                }
            </div>
            <div class="col-sm-1">
                <h2 class="or">Hoặc</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    @*sign up form*@
                    <h2>Tạo tài khoản mới</h2>
                    <form action="#">
                        <input type="text" placeholder="Tên" />
                        <input type="text" placeholder="UserName" />
                        <input type="email" placeholder="Địa chỉ email" />
                        <input type="password" placeholder="Mật khẩu" />
                        <button type="submit" class="btn btn-default">Đăng kí</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section><!--/form
